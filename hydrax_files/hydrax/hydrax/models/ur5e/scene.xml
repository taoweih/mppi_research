<mujoco model="ur5e scene">
  <include file="ur5e.xml"/>

  <statistic center="0.3 0 0.4" extent="0.8"/>

  <!-- Target sphere -->
  <worldbody>
    <body name="goal" mocap="true" pos="0 0.6 0.25">
      <site type="sphere" size=".03" rgba="1 0 0 0.5"  />
    </body>
  </worldbody>

  <!-- Obstacles -->
  <worldbody>
    <geom name="obstacle1" type="cylinder" pos="0  0.3  0.20" size="0.065 0.20" rgba="0.6 0.6 0.6 1"/>
    <geom name="obstacle2" type="cylinder" pos="0.2  0.3  0.20" size="0.065 0.20" rgba="0.6 0.6 0.6 1"/>
    <geom name="obstacle3" type="cylinder" pos="-0.2  0.3  0.20" size="0.065 0.20" rgba="0.6 0.6 0.6 1"/>
